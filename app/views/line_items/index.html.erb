<p id="notice"><%= notice %></p>

<h1>Listing Line Items</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Qty</th>
      <th>Unit Price</th>
      <th>Full Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @total_sum = 0 %>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product %></td>
        <td><%= line_item.qty %></td>
        <td><%= number_to_currency(line_item.unit_price) %></td>
        <td><%= number_to_currency(line_item.full_price) %></td>
        <% @total_sum += line_item.full_price %>
        <td><%= link_to 'Show', order_line_item_path(@order, line_item) %></td>
        <td><%= link_to 'Edit', edit_order_line_item_path(@order, line_item) %></td>
        <td><%= link_to 'Destroy', [@order, line_item], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
      <tr>
        <td><b>Total:</b> <%= number_to_currency(@total_sum) %></td>
      </tr>
  </tbody>
</table>

<br>
<%= link_to 'Printable Receipt (PDF)', order_path(@order, format: "pdf") %> |
<%= link_to 'New Line item', new_order_line_item_path(@order) %>
